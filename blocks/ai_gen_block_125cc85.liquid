{% doc %}
  Modern minimal category explorer with clean design and smooth interactions.
  Displays 6 categories in a responsive grid with elegant hover effects.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .explore-categories-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .explore-categories-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .explore-categories-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 3rem;
  }

  .explore-categories-title-{{ ai_gen_id }} {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin: 0 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .explore-categories-subtitle-{{ ai_gen_id }} {
    font-size: 1.1rem;
    color: rgba(var(--color-base-text), 0.7);
    margin: 0;
    font-weight: 400;
  }

  .explore-categories-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.5rem;
  }

  .explore-category-card-{{ ai_gen_id }} {
    aspect-ratio: 1;
    background: rgb(var(--color-base-background-1));
    border-radius: 1.5rem;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    position: relative;
    border: 1px solid rgba(var(--color-base-text), 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .explore-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    border-color: rgba(var(--color-base-accent-1), 0.2);
    box-shadow: 0 20px 40px rgba(var(--color-base-text), 0.1);
  }

  .explore-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .explore-category-card-{{ ai_gen_id }}:hover .explore-category-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .explore-category-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(var(--color-base-accent-1), 0.05) 0%, rgba(var(--color-base-accent-2), 0.05) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .explore-category-placeholder-{{ ai_gen_id }} svg {
    width: 2.5rem;
    height: 2.5rem;
    opacity: 0.3;
    color: rgb(var(--color-base-text));
  }

  .explore-category-overlay-{{ ai_gen_id }} {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.7) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .explore-category-card-{{ ai_gen_id }}:hover .explore-category-overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .explore-category-name-{{ ai_gen_id }} {
    color: white;
    font-size: 0.95rem;
    font-weight: 500;
    margin: 0;
    text-align: center;
    letter-spacing: 0.02em;
  }

  .explore-category-label-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    padding: 0.75rem;
    text-align: center;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgb(var(--color-base-text));
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .explore-category-card-{{ ai_gen_id }}:hover .explore-category-label-{{ ai_gen_id }} {
    transform: translateY(0);
  }

  @media (max-width: 990px) {
    .explore-categories-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }
  }

  @media (max-width: 749px) {
    .explore-categories-container-{{ ai_gen_id }} {
      padding: 0 1rem;
    }
    
    .explore-categories-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .explore-categories-header-{{ ai_gen_id }} {
      margin-bottom: 2rem;
    }

    .explore-category-card-{{ ai_gen_id }} {
      border-radius: 1.25rem;
    }
  }
{% endstyle %}

<div class="explore-categories-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="explore-categories-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="explore-categories-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="explore-categories-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="explore-categories-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="explore-categories-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign category_enabled_key = 'category_' | append: i | append: '_enabled'
          assign category_name_key = 'category_' | append: i | append: '_name'
          assign category_image_key = 'category_' | append: i | append: '_image'
          assign category_link_key = 'category_' | append: i | append: '_link'

          assign category_enabled = block.settings[category_enabled_key]
          assign category_name = block.settings[category_name_key]
          assign category_image = block.settings[category_image_key]
          assign category_link = block.settings[category_link_key]
        %}

        {% if category_enabled %}
          <a 
            href="{{ category_link | default: '#' }}" 
            class="explore-category-card-{{ ai_gen_id }}"
            {% if category_link == blank %}onclick="return false;"{% endif %}
            aria-label="{{ category_name | default: 'Category' | escape }}"
          >
            {% if category_image %}
              <img
                src="{{ category_image | image_url: width: 400 }}"
                alt="{{ category_image.alt | escape | default: category_name }}"
                class="explore-category-image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="400"
              >
              {% if category_name != blank %}
                <div class="explore-category-overlay-{{ ai_gen_id }}">
                  <h3 class="explore-category-name-{{ ai_gen_id }}">{{ category_name }}</h3>
                </div>
              {% endif %}
            {% else %}
              <div class="explore-category-placeholder-{{ ai_gen_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
              {% if category_name != blank %}
                <div class="explore-category-label-{{ ai_gen_id }}">
                  {{ category_name }}
                </div>
              {% endif %}
            {% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

