{% comment %}
  Modern electronics store hero section with promotional banners and featured products
{% endcomment %}

<style>
  .saudewala-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 80px 0;
    position: relative;
    overflow: hidden;
  }

  .saudewala-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
    opacity: 0.3;
  }

  .saudewala-hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .saudewala-hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .saudewala-hero-text h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin: 0 0 1rem;
    line-height: 1.1;
  }

  .saudewala-hero-text p {
    font-size: 1.2rem;
    margin: 0 0 2rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .saudewala-hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .saudewala-hero-btn {
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .saudewala-hero-btn--primary {
    background: white;
    color: #667eea;
  }

  .saudewala-hero-btn--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .saudewala-hero-btn--secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .saudewala-hero-btn--secondary:hover {
    background: white;
    color: #667eea;
  }

  .saudewala-hero-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .saudewala-hero-feature {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    backdrop-filter: blur(10px);
  }

  .saudewala-hero-feature-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .saudewala-hero-feature h3 {
    font-size: 1.1rem;
    margin: 0 0 0.5rem;
    font-weight: 600;
  }

  .saudewala-hero-feature p {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.8;
  }

  .saudewala-hero-image {
    position: relative;
  }

  .saudewala-hero-image img {
    width: 100%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  @media (max-width: 768px) {
    .saudewala-hero {
      padding: 60px 0;
    }

    .saudewala-hero-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .saudewala-hero-features {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .saudewala-hero-cta {
      justify-content: center;
    }
  }
</style>

<section class="saudewala-hero" {{ section.shopify_attributes }}>
  <div class="saudewala-hero-container">
    <div class="saudewala-hero-content">
      <div class="saudewala-hero-text">
        {% if section.settings.heading != blank %}
          <h1>{{ section.settings.heading }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}

        <div class="saudewala-hero-cta">
          {% if section.settings.button_1_text != blank and section.settings.button_1_url != blank %}
            <a href="{{ section.settings.button_1_url }}" class="saudewala-hero-btn saudewala-hero-btn--primary">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}
          
          {% if section.settings.button_2_text != blank and section.settings.button_2_url != blank %}
            <a href="{{ section.settings.button_2_url }}" class="saudewala-hero-btn saudewala-hero-btn--secondary">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="saudewala-hero-image">
        {% if section.settings.hero_image != blank %}
          <img
            src="{{ section.settings.hero_image | image_url: width: 600 }}"
            alt="{{ section.settings.hero_image.alt | escape }}"
            loading="lazy"
            width="600"
            height="400"
          >
        {% else %}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
    </div>

    <div class="saudewala-hero-features">
      {% for block in section.blocks %}
        <div class="saudewala-hero-feature" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="saudewala-hero-feature-icon">
              <span class="material-symbols-outlined">{{ block.settings.icon }}</span>
            </div>
          {% endif %}
          
          {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
          {% endif %}
          
          {% if block.settings.description != blank %}
            <p>{{ block.settings.description }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
