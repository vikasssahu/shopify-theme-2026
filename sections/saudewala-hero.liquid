      "label": "Primary Button URL"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Secondary Button Text",
      "default": "View Categories"
    },
    {
      "type": "url",
      "id": "button_2_url",
      "label": "Secondary Button URL"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Material Symbol)",
          "default": "verified",
          "info": "Use Material Symbols icon name"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality Guaranteed"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "All products come with warranty"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Saudewala Hero",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "verified",
            "title": "Quality Guaranteed",
            "description": "All products come with warranty"
          }
        },
        {
          "type": "feature",
