{% comment %}
  Electronics product showcase with modern cards and tech-focused design
{% endcomment %}

<style>
  .electronics-showcase {
    padding: 80px 0;
    background: #f8fafc;
  }

  .electronics-showcase-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .electronics-showcase-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .electronics-showcase-header h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #1a202c;
    margin: 0 0 1rem;
  }

  .electronics-showcase-header p {
    font-size: 1.1rem;
    color: #4a5568;
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
  }

  .electronics-showcase-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .electronics-product-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    position: relative;
  }

  .electronics-product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
  }

  .electronics-product-card-image {
    position: relative;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .electronics-product-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .electronics-product-card:hover .electronics-product-card-image img {
    transform: scale(1.1);
  }

  .electronics-product-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: #667eea;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .electronics-product-badge--sale {
    background: #e53e3e;
  }

  .electronics-product-badge--new {
    background: #38a169;
  }

  .electronics-product-card-content {
    padding: 1.5rem;
  }

  .electronics-product-category {
    color: #667eea;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.5rem;
  }

  .electronics-product-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0 0 0.5rem;
    line-height: 1.4;
  }

  .electronics-product-specs {
    color: #4a5568;
    font-size: 0.9rem;
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  .electronics-product-price {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .electronics-product-price-current {
    font-size: 1.3rem;
    font-weight: 700;
    color: #1a202c;
  }

  .electronics-product-price-original {
    font-size: 1rem;
    color: #a0aec0;
    text-decoration: line-through;
  }

  .electronics-product-discount {
    background: #fed7d7;
    color: #c53030;
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .electronics-product-actions {
    display: flex;
    gap: 0.5rem;
  }

  .electronics-product-btn {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
    display: inline-block;
  }

  .electronics-product-btn--primary {
    background: #667eea;
    color: white;
  }

  .electronics-product-btn--primary:hover {
    background: #5a67d8;
    transform: translateY(-1px);
  }

  .electronics-product-btn--secondary {
    background: #f7fafc;
    color: #4a5568;
    border: 1px solid #e2e8f0;
  }

  .electronics-product-btn--secondary:hover {
    background: #edf2f7;
    border-color: #cbd5e0;
  }

  .electronics-product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .electronics-product-stars {
    display: flex;
    gap: 0.1rem;
  }

  .electronics-product-star {
    color: #ffd700;
    font-size: 1rem;
  }

  .electronics-product-rating-count {
    color: #4a5568;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .electronics-showcase {
      padding: 60px 0;
    }

    .electronics-showcase-container {
      padding: 0 1rem;
    }

    .electronics-showcase-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .electronics-showcase-header {
      margin-bottom: 3rem;
    }
  }
</style>

<section class="electronics-showcase" {{ section.shopify_attributes }}>
  <div class="electronics-showcase-container">
    <div class="electronics-showcase-header">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="electronics-showcase-grid">
      {% for block in section.blocks %}
        <div class="electronics-product-card" {{ block.shopify_attributes }}>
          <div class="electronics-product-card-image">
            {% if block.settings.product_image != blank %}
              <img
                src="{{ block.settings.product_image | image_url: width: 400 }}"
                alt="{{ block.settings.product_image.alt | escape }}"
                loading="lazy"
                width="400"
                height="300"
              >
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            
            {% if block.settings.badge_text != blank %}
              <div class="electronics-product-badge electronics-product-badge--{{ block.settings.badge_type }}">
                {{ block.settings.badge_text }}
              </div>
            {% endif %}
          </div>

          <div class="electronics-product-card-content">
            {% if block.settings.category != blank %}
              <div class="electronics-product-category">{{ block.settings.category }}</div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="electronics-product-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.specs != blank %}
              <p class="electronics-product-specs">{{ block.settings.specs }}</p>
            {% endif %}

            {% if block.settings.rating > 0 %}
              <div class="electronics-product-rating">
                <div class="electronics-product-stars">
                  {% for i in (1..5) %}
                    <span class="electronics-product-star">
                      {% if i <= block.settings.rating %}★{% else %}☆{% endif %}
                    </span>
                  {% endfor %}
                </div>
                {% if block.settings.rating_count > 0 %}
                  <span class="electronics-product-rating-count">({{ block.settings.rating_count }})</span>
                {% endif %}
              </div>
            {% endif %}

            <div class="electronics-product-price">
              {% if block.settings.current_price != blank %}
                <span class="electronics-product-price-current">₹{{ block.settings.current_price }}</span>
              {% endif %}
              
              {% if block.settings.original_price != blank and block.settings.original_price != block.settings.current_price %}
                <span class="electronics-product-price-original">₹{{ block.settings.original_price }}</span>
                {% assign discount = block.settings.original_price | minus: block.settings.current_price %}
                {% assign discount_percent = discount | times: 100 | divided_by: block.settings.original_price %}
                <span class="electronics-product-discount">{{ discount_percent | round }}% OFF</span>
              {% endif %}
            </div>

            <div class="electronics-product-actions">
              {% if block.settings.product_url != blank %}
                <a href="{{ block.settings.product_url }}" class="electronics-product-btn electronics-product-btn--primary">
                  Buy Now
                </a>
              {% endif %}
              
              <button class="electronics-product-btn electronics-product-btn--secondary">
                ♡
              </button>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Electronics Showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Electronics"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover our handpicked selection of premium electronics and technology products"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "image_picker",
          "id": "product_image",
          "label": "Product Image"
        },
        {
          "type": "text",
          "id": "category",
          "label": "Category",
          "default": "Smartphones"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product Title",
          "default": "Latest Smartphone"
        },
        {
          "type": "textarea",
          "id": "specs",
          "label": "Specifications",
          "default": "6.1-inch display, 128GB storage, 48MP camera"
        },
        {
          "type": "text",
          "id": "current_price",
          "label": "Current Price",
          "default": "25999"
        },
        {
          "type": "text",
          "id": "original_price",
          "label": "Original Price (optional)"
        },
        {
          "type": "url",
          "id": "product_url",
          "label": "Product URL"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "default": 4
        },
        {
          "type": "number",
          "id": "rating_count",
          "label": "Rating Count",
          "default": 128
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge Text (optional)",
          "placeholder": "New, Sale, etc."
        },
        {
          "type": "select",
          "id": "badge_type",
          "label": "Badge Type",
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
