<div
  class='scroll-buttons'
  {{ block.shopify_attributes }}
  style="--margin-top: {{ block.settings.margin_top | divided_by: 10.0 }}rem;--margin-bottom: {{ block.settings.margin_bottom | divided_by: 10.0 }}rem;"
>
  {% if block.settings.container_heading != blank %}
    <p
      class="scroll-buttons__heading font-size margin-0 {{ block.settings.heading_alignment }}"
      style='--font-size: {{ block.settings.heading_size | divided_by: 10.0 }}rem;'
    >
      {{ block.settings.container_heading }}
    </p>
  {% endif %}
  <div
    class="scroll-buttons-container flex flex-align-center flex-justify-{{ alignment }} font-size"
    style="--font-size: {{ block.settings.text_size | divided_by: 10.0 }}rem;--icon-scale:{{ block.settings.icon_scale | divided_by: 100.0 }};--padding:{{ block.settings.padding | divided_by: 7.0 }}em;--bg-color:{{ block.settings.bg_color }};--border-radius:{{ block.settings.corner_radius | divided_by: 10.0 }}em;--border-thickness:{{ block.settings.border_size }}px;--border-color:{{ block.settings.border_color }};--text-color:{{ block.settings.text_color }};--icon-color:{{ block.settings.icon_color }};"
  >
    {% for i in (1..6) %}
      {% liquid
        case i
          when 1
            assign scroll_id = block.settings.btn_1_scroll_id
            assign text = block.settings.btn_1_text
            assign icon = block.settings.btn_1_icon
            assign icon_filled = block.settings.btn_1_filled_icon
            assign custom_icon = block.settings.btn_1_custom_icon
          when 2
            assign scroll_id = block.settings.btn_2_scroll_id
            assign text = block.settings.btn_2_text
            assign icon = block.settings.btn_2_icon
            assign icon_filled = block.settings.btn_2_filled_icon
            assign custom_icon = block.settings.btn_2_custom_icon
          when 3
            assign scroll_id = block.settings.btn_3_scroll_id
            assign text = block.settings.btn_3_text
            assign icon = block.settings.btn_3_icon
            assign icon_filled = block.settings.btn_3_filled_icon
            assign custom_icon = block.settings.btn_3_custom_icon
          when 4
            assign scroll_id = block.settings.btn_4_scroll_id
            assign text = block.settings.btn_4_text
            assign icon = block.settings.btn_4_icon
            assign icon_filled = block.settings.btn_4_filled_icon
            assign custom_icon = block.settings.btn_4_custom_icon
          when 5
            assign scroll_id = block.settings.btn_5_scroll_id
            assign text = block.settings.btn_5_text
            assign icon = block.settings.btn_5_icon
            assign icon_filled = block.settings.btn_5_filled_icon
            assign custom_icon = block.settings.btn_5_custom_icon
          when 6
            assign scroll_id = block.settings.btn_6_scroll_id
            assign text = block.settings.btn_6_text
            assign icon = block.settings.btn_6_icon
            assign icon_filled = block.settings.btn_6_filled_icon
            assign custom_icon = block.settings.btn_6_custom_icon
        endcase
      %}
      {% if text != blank %}
        <a
          {% if scroll_id != blank %}href="{{ scroll_id }}"{% else %}disabled{% endif %}
          class="scroll-button product__text custom-border-hex custom-border-radius custom-bg"
        >
          {% if custom_icon != blank %}
            <img
              src="{{ custom_icon | image_url }}"
              alt="{{ custom_icon.alt }}"
              width="auto"
              height="auto"
              loading="lazy"
            >
          {% elsif icon != blank %}
            {% render 'material-icon', icon: icon, filled: icon_filled %}
          {% endif %}
          <span>{{ text }}</span>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>